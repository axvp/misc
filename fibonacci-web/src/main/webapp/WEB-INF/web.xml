<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
	<display-name>fibonacci web application</display-name>

	<!-- JAX-WS Context listener -->
	<listener-class>
		com.sun.xml.ws.transport.http.servlet.WSServletContextListener
	</listener-class>

	<!-- RESTful Servlet -->
	<servlet>
		<servlet-name>fibonacci-rest</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>de.telekom.pd.rest</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- JAX-WS Servlet -->
	<servlet>
		<servlet-name>fibonacci-soap</servlet-name>
		<servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- RESTful Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>fibonacci-rest</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<!-- JAX-WS Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>fibonacci-soap</servlet-name>
		<url-pattern>/soap/*</url-pattern>
	</servlet-mapping>
</web-app>
